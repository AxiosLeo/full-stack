{
  "compilerOptions": {
    "declaration": true,
    "preserveConstEnums": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true,
    "noUnusedLocals": true,
    "skipLibCheck": false,
    "alwaysStrict": true
  },
  "include": [
    ".eslintrc.js",
    "src/**/*"
  ],
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "@swc-node/register"
  }
}